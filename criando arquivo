#include <stdio.h>
#include <stdlib.h>

void main(){
   FILE *arquivo; //EOF ( END OF FILE ) feof ( função do EOF )
   char c;
   int conta = 0;

   arquivo = fopen("arquivo.txt", "r"); // função pra abrir arquivo
   if(arquivo==NULL){
      printf("Erro ao abrir arquivo!");
   }else{
      while( (c = fgetc(arquivo)) != EOF ){
         if( c == 'o'){ conta++ ;}
	 printf("%c", c);
      }
    }
      
   fclose(arquivo);
}  
  /* "r" = abre o arquivo somente p/ leitura, a partir do inicio. O arquivo deve existir.
      "w" = cria um arquivo vazio p/ escrita. Se ja havi o arquivo, ele é perdido.
      "a" = adiciona no final do arquivo. Se o arquivo não existir, a função o cria.
      "r+" = Abre o arquivo p/ leitura e escrita a partir do inicio. o arquivo deve existir.
      "w+" = cria o arquivo vazio p/ leitura e escrita. Se já havia o arquivo ele é perdido.
      "a+" = abre p/ adição ou leitura no final do arquivo. se o arquivo não existir a função o cria. 
   */ 



 

#include<stdio.h>
#include<stdlib.h>

struct TRE {
char city[80];
int zone;
int section;
double voter;
char party[80];
char applicant[80];
          };
int menu();
void Incluir();
void Listar();
void Consultar();
void Alterar();
void Excluir();
void Organizar();
void Copiar();
void Restaurar();

int main(void){
int opção;

do{
opção = menu();
switch(opção){

case 1:
printf("\\n===Incluir===\\n\\n");
Incluir();
break;

case 2:
printf("\\n===Listar===\\n\\n");
Listar();
break;

case 3:
printf("\\n===Consultar===\\n\\n");
Consultar();
break;

case 4:
printf("\\n===Alterar===\\n\\n");
Alterar();
break;

case 5:
printf("\\n===Excluir===\\n\\n");
Excluir();
break;

case 6:
printf("\\n===Organizar===\\n\\n");
Organizar();
break;

case 7:
printf("\\n===Copiar===\\n\\n");
Copiar();
break;

case 8:
printf("\\n===Restaurar===\\n\\n");
Restaurar();
}
}
while(opção != 0);
system("pause");
return 0;
}

int menu(void){

int opção1;
do{
printf("\\n\\n=== menu para acessar arquivo TRE ===\\n\\n");
printf("1. Inclur\\n");
printf("2. Listar\\n");
printf("3. Consultar\\n");
printf("4. Alterar\\n");
printf("5. Exclur\\n");
printf("6. Organizar\\n");
printf("7. Copiar\\n");
printf("8. Restaurar\\n");
printf("0. Sair\\n");
printf("Digite sua opção:");
scanf("%d", &opção1);
if((opção1 < 0) || (opção1 > 8))
printf("Opção Incorreta Digitada!!\\n");
}

while((opção1 < 0) || (opção1 > 8));
return opção1;
}


void Incluir(){
struct TRE;

FILE*f = fopen("TRE.bin", "rb+");
if(f == NULL){
f = fopen("TRE.bin", "wb+");
if(f == NULL){
printf("Erro ao abrir arquivo !!\n");
exit(1);
  }
}
fclose(f)
}

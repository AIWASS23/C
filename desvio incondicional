desvio incondicional
goto
return
break
continue


#include <stdio.h>

void main(){
   int x = 1;
   goto marcelo; // pula a linha de comando
   x++;
   marcelo:
   printf("teste \n");
   printf("%d", x);
}

#include <stdio.h>

void main(){

   int x = 0;
 
   while(x < 10){
      printf("%d \n", x);
      x++;
      if(x == 3){
      break; // encerra todo laço (while)
     }
   }
  printf("fim do algoritmo");
}


#include <stdio.h>

void main(){

   int x = 0;
 
   while(x < 10){
      x++;
      if(x == 3){
      continue; // pula 1 interação do laço
     }
    printf("%d \n", x);

   }
  printf("fim do algoritmo");
}





